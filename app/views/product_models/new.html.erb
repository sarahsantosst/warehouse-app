<h1>Cadastrar Novo Modelo de Produto</h1>

<%= form_with(model: @product_model) do |f|%>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :weight %>
    <%= f.number_field :weight %>
  </div>


  <div>
    <%= f.label :height %>
    <%= f.text_field :height %>
  </div>

  <div>
    <%= f.label :width %>
    <%= f.text_field :width %>
  </div>

  <div>
    <%= f.label :depth %>
    <%= f.text_field :depth %>
  </div>


  <div>
    <%= f.label :sku %>
    <%= f.text_field :sku %>
  </div>

  <div>
    <%= f.label :supplier_id %>
    <%= f.collection_select :supplier_id, @suppliers, :id, :brand_name %>
  </div>

  <%= f.submit 'Enviar' %>
<% end %>